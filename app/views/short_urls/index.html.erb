<p id="notice"><%= notice %></p>

<h1>Short Urls</h1>

<table>
  <thead>
    <tr>
      <th>Url</th>
      <th>Identifier</th>
      <th>Shortened Url</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @short_urls.each do |short_url| %>
      <tr>
        <td><%= short_url.url %></td>
        <td><%= short_url.identifier %></td>
        <% shortend_url = Settings.endpoints.redirector + short_url.identifier %>
        <td><%= link_to shortend_url, shortend_url, target: "_blank" %></td>
        <td><%= link_to 'Show', short_url %></td>
        <td><%= link_to 'Edit', edit_short_url_path(short_url) %></td>
        <td><%= link_to 'Destroy', short_url, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% statistic_url = Settings.endpoints.statistcs + short_url.identifier %>
        <td><%= link_to 'Show stats(JSON)', statistic_url, target: "_blank" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

